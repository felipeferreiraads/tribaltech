.tickets
    padding 0 0 250px
    position relative
    +below($bp.md)
        padding 0 0 100px
    .grid
        display flex
        flex-wrap: wrap
        +below($bp.lg)
            flex-direction column
            align-items: center 
    .ticket
        width 33.33%
        height 400px
        background: $color.secondary
        padding 50px
        display flex
        flex-direction column
        +below($bp.lg)
            width 400px
            max-width 100%
            padding 50px 20px
        .category
            font-size 22px
            font-family: $font-family.secondary
            margin-bottom 10px
        .price
            font-size 40px
            font-family: $font-family.secondary
            margin-bottom 30px
            i
                font-style normal
                letter-spacing: 15px
        .text
            font-size 18px
            max-width 85%
            line-height 1.5
            margin-bottom 30px
        .link
            width 230px
            max-width: 100%
            height 60px
            border: 2px solid $color.black
            display block
            padding 15px
            display flex
            justify-content: space-between
            align-items: center
            transition .2s
            &.white
                border-color: $color.white
            &:hover
                background: $color.white
                color: $color.black
                border-color: $color.white
            .buy
                font-size 18px
                font-family: $font-family.secondary
                text-transform uppercase
                letter-spacing: 10px
                line-height 56px
            .icon
                font-size 22px
        &.premium
            background: $color.gray-light
        &.cabin
            background: $color.primary
        .white
            color: $color.white
        .blue
            color: $color.primary
        .pink
            color: $color.secondary